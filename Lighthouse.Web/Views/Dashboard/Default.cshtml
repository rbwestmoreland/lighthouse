@model Lighthouse.Web.Models.Dashboard.Dashboard
<div class="row">      
@foreach (var application in Model.Applications)
{
    <div class="span4">
        <h3>@application.Name</h3>
        @if (application.Builds.Any())
        {
            var build = application.Builds.First();
            <div class="btn-group">
              <a class="btn btn-mini @Html.GetButtonClass(build.Status) dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon icon-white @Html.GetIconClass(build.Status)"></i> @build.Status <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><a href="@build.Url" target="_blank"><i class="icon icon-share-alt"></i> View on AppHarbor</a></li>
                <li><a href="@build.TestsUrl" target="_blank"><i class="icon-list-alt"></i> View Tests</a></li>
                <li><a href="@build.DownloadUrl" target="_blank"><i class="icon icon-download"></i> Download</a></li>
              </ul>
            </div>
            <ul class="unstyled">
                <li><i class="icon icon-time"></i> <b>Started</b> @build.Created</li>
                <li><i class="icon icon-time"></i> <b>Completed</b> @if (build.Deployed.HasValue){ @build.Deployed.Value } else { <text>-</text> }</li>
                <li><i class="icon icon-tag"></i> <b>Id</b> @if (build.CommitId.Length > 7){ @build.CommitId.Substring(0, 7)<text>...</text> } else { @build.CommitId }</li>
                <li><i class="icon icon-comment"></i> @build.CommitMessage</li>
            </ul>
            
        }
        else
        {
            <a class="btn btn-mini disabled" href="#">No Builds <span class="caret"></span></a>
            <ul class="unstyled">
                <li><i class="icon icon-time"></i> <b>Started</b> -</li>
                <li><i class="icon icon-time"></i> <b>Completed</b> -</li>
                <li><i class="icon icon-tag"></i> <b>Id</b> -</li>
                <li><i class="icon icon-comment"></i> -</li>
            </ul>
        }
    </div>
}
</div>
